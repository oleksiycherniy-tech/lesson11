import tkinter as tk
import random

root = tk.Tk()
root.title("Гра – Вгадай число")

random_number = random.randint(1, 100)

def check_guess():
    try:
        user_guess = int(entry.get())
        if user_guess < random_number:
            result_label.config(text="Загадане число більше!")
        elif user_guess > random_number:
            result_label.config(text="Загадане число менше!")
        else:
            result_label.config(text="Вітаємо! Ви вгадали число!")
    except ValueError:
        result_label.config(text="Будь ласка, введіть число!")

label = tk.Label(root, text="Вгадай число від 1 до 100:")
label.pack()

entry = tk.Entry(root)
entry.pack()

check_button = tk.Button(root, text="Перевірити", command=check_guess)
check_button.pack()

result_label = tk.Label(root, text="")
result_label.pack()

root.mainloop()
